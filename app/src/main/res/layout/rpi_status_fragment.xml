<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rpi.RpiStatusFragment">

    <ca.grantelliott.audiogeneapp.ui.components.GaugeComponent
        android:id="@+id/rpi_cpu_freq_gauge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:minValue="0"
        app:maxValue="100"
        app:warnValue="60"
        app:criticalValue="85"
        app:value="0"
        app:thickness="5dp"
        />

    <TextView
        android:id="@+id/text_rpi_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/rpi_cpu_freq_gauge"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/status_unknown" />

</androidx.constraintlayout.widget.ConstraintLayout>